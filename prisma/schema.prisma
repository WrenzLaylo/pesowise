// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Update the existing Expense model
model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  category    String
  description String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  userId      String
  type        String   @default("EXPENSE") // New field: "EXPENSE" or "INCOME"
}

// Create the new Subscription model
model Subscription {
  id        Int      @id @default(autoincrement())
  name      String
  amount    Float
  dueDay    Int      // e.g., 15 for the 15th of every month
  userId    String
  createdAt DateTime @default(now())
}

// ... Keep Budget and Category models exactly as they were ...
model Budget {
  id     Int   @id @default(autoincrement())
  amount Float @default(0)
  userId String
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String
  icon   String 
  userId String 
}